project_name = 'test_dna'

test_dna	= [
	'test_dna.c',		\
	'dna.c',		\
	'fifo.c',		\
	'../../test/test.c',	\
]

#libs = ['scalp', 'nanoK']
#libpath = ['scalp', 'nanoK']

#SConscript(['./scalp/SConscript', './nanoK/SConscript'])

optimize        = '-O2 '
optimize        = ' '
includes	= ['.', './scalp', './nanoK', './test']
cflags		= '-g -Wall ' + optimize
ldflags		= '-g -Wall ' + optimize

env = Environment(
	CC = 'gcc',		\
	AR = 'ar',		\
	CFLAGS = cflags,	\
	CPPPATH = includes,	\
	LINKFLAGS = ldflags,	\
)

#default = env.Program(project_name, test_dna, LIBS = libs, LIBPATH = libpath)
default = env.Program(project_name, test_dna)
env.Default(default)

# suppress reliquat files
env.Alias('clean', '', 'rm -f *~ *o test_dna */*.o */*.a')
env.AlwaysBuild('clean')
